<div class="jumbotron text-center">
  <h4>Contact Page</h4>

  <br/><br/>

  <div class="form-horizontal form-group form-group-lg row">
    <div class="col-xs-10 col-sm-4 col-md-4">
      {{input type="email" value=emailAddress class="form-control" placeholder="Please type your e-mail address." autofocus="autofocus"}}
    </div>
    <div class="col-xs-10 col-sm-4 col-md-5">
        {{textarea class="form-control" placeholder="Your message" rows="1" value=message}}
    </div>
    <div class="col-xs-10 col-md-3">
        <button disabled={{isDisabled}} {{action 'saveMsg'}} class="btn btn-primary btn-lg btn-block">Send Message</button>
    </div>
  </div>

   {{#if responseMessage}}
     <div class="alert alert-success">{{responseMessage}}</div>
   {{/if}}
  
  <br/><br/>
</div>